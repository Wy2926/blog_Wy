@using CC.Blog.Web.Startup
@using CC.Blog.Web.Views.Shared.Components.Paging
@model IReadOnlyList<CC.Blog.Blogs.DTO.ProposalOut>
@{
    ViewBag.CurrentPageName = PageNames.Proposal; // The menu item will be active for this page.
}
@section scripts
    {
    <environment names="Development">
        <script src="~/view-resources/Views/Blog/proposal.js" asp-append-version="true"></script>
    </environment>
    <environment names="Staging,Production">
        <script src="~/view-resources/Views/Blog/proposal.min.js" asp-append-version="true"></script>
    </environment>
}
<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">
                <h2>
                    @L("博客建议")
                </h2>
                <ul class="header-dropdown m-r--5">
                    <li class="dropdown">
                        <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                            <i class="material-icons">more_vert</i>
                        </a>
                        <ul class="dropdown-menu pull-right">
                            <li><a id="RefreshButton" href="javascript:void(0);" class="waves-effect waves-block"><i class="material-icons">refresh</i>@L("Refresh")</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
            <div class="body table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>@L("建议人邮箱")</th>
                            <th>@L("建议内容")</th>
                            <th>@L("IP地址")</th>
                            <th>@L("CreationTime")</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var proposal in Model)
                        {
                            <tr>
                                <td>@proposal.Email</td>
                                <td>@proposal.Body</td>
                                <td>@proposal.Ip</td>
                                <td>@proposal.CreationTime</td>
                                <td class="dropdown">
                                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                                        <i class="material-icons">menu</i>
                                    </a>
                                    <ul class="dropdown-menu pull-right">
                                        <li><a href="#" class="waves-effect waves-block delete-proposal" data-proposal-id="@proposal.Id" data-proposal-title="@proposal.Body.Substring(0,30>proposal.Body.Length?proposal.Body.Length:30)"><i class="material-icons">delete_sweep</i>@L("Delete")</a></li>
                                    </ul>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
